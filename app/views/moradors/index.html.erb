<div>
    <%= link_to 'Novo Morador', new_morador_path, class:'btn btn-primary' %>
</div>

<div>

  <table class="table">

        <thead>
              <br>
              <br>
              Lista de Moradores
              <br>
              <br>
              <tr>
                <td>
                  <div class='col-md-4'>
                  Nome
                 </div>
                </td>

                <td>
                  <div class='col-md-4'>
                    Cpf
                  </div>
                </td>

        </thead>
      <tbody>

        <% @moradors.each do |morador| %>

        <tr>
            <td>
              <%= morador.nome%>
            </td>
            <td>
              <%= morador.cpf%>
            </td>

            <td class="col-md-1">
              <%= link_to 'Visualizar', morador_path(morador), class:'btn btn-info btn-sm' %>
            </td>
            <td>
              <%= link_to 'Editar', edit_morador_path(morador), class:'btn btn-warning' %>
            </td>
            <td>
              <%= link_to 'Excluir', morador_path(morador), method: :delete, data: {  confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            </td>
        </tr>

        <% end %>

      </tbody>


  </table>

</div>
